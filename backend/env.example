# Backend environment variables
# Copy this file to .env for your local development
# Set these variables in your production environment

# Database configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=quiz_app
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# JWT configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS configuration - Add your frontend URLs here
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,https://happy-smoke-0f7647710.2.azurestaticapps.net

# Server configuration
PORT=3000
NODE_ENV=development

# For production, also set:
# NODE_ENV=production
# And update CORS_ORIGINS with your production frontend URL
